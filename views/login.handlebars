<div class="container">
    <div class="center">
        <div class="row">
            <div class="columns box">
                <form>
                    <div class="form-group">
                        {{#if messages.error}}
                        <p>{{messages.error}}</p>
                        {{/if}}
                        <label for="Login">Username</label>
                        <input type="text" class="form-control u-full-width" id="usernameLogin" placeholder="Username">
                        <label for="Login">Password</label>
                        <input type="text" class="form-control u-full-width" id="passLogin" placeholder="Password">
                    </div>
                    <div class="one-half columns">
                        <button type="submit" class="btn btn-primary" id="login">Login</button>
                    </div>
                    <h6>Or sign up <a href="/signup">here</a></h6>
                </form>
            </div>
        </div>
    </div>
</div>