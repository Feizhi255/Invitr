<!-- NAVBAR -->
<div class="container full-width-container">
    <div class="topnav" id="myTopnav">
        <a href="/">Home</a>
        <a href="/addguest">Add Guest</a>
        <a class="active" href="/dashboard">Summary</a>
        <a href="javascript:void(0);" class="icon" onclick="myFunction()">
            <i class="fa fa-bars"></i>
        </a>
        <div class="topnav-right">
            <a href="/logout">Logout</a>
            <a>Welcome, {{email}}</a>
        </div>
    </div>
</div>

<div id="page-container">
    <div id="content-wrap">
        <div class="container content box">

            <div class="row">
                <div class="twelve columns">
                    <h1 class="dhsummary">Summary</h1>
                </div>
            </div>

            <div class="row u-full-width">
                <div class="twelve columns">
                    <a href="/details" class="button-primary u-full-width" id="viewGuests">View guest details</a>
                </div>
            </div>

            <div class="row">
                <div class="four columns">
                    <div class="catBox">
                        {{!-- dynamic number here --}}
                        <p>{{allListed}} guests listed</p>
                    </div>
                </div>
                <div class="four columns">
                    <div class="catBox">
                        {{!-- dynamic number here --}}
                        <p>{{invitationsSent}} invitations sent</p>
                    </div>
                </div>
                <div class="four columns">
                    <div class="catBox">
                        {{!-- dynamic number here --}}
                        <p>{{notRSVP}} guests have not RSVPd</p>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="four columns">
                    <div class="catBox">
                        {{!-- dynamic number here --}}
                        <p>{{incompleteInfo}} guests have incomplete information</p>
                    </div>
                </div>
                <div class="four columns">
                    <div class="catBox">
                        {{!-- dynamic number here --}}
                        <p>{{haveRSVP}} guests have RSVPd</p>
                    </div>
                </div>
                <div class="four columns">
                    <div class="catBox">
                        {{!-- dynamic number here --}}
                        <p>{{invitesNotSent}} invitations not sent yet</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer id="footer">Footer</footer>
</div>